int menos_venta(int x[50])
{
int menor,p=-1;
menor=x[0];
for(int i=0;i<50;i++)
{
if (x[i]<menor)
{
menor=x[i];
p=i;
}
}
return p;
}

float venta_promedio(int x[50])
{
int suma=0;float pro;
for (int i=0; i<50;i++)
{
suma=suma + x[i];
}
pro=(float) suma/50;

return pro;
}

